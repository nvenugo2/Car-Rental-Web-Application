<!DOCTYPE html>
<html>
  <head>
    <title>ExpressCars</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    "application.css", media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "application.js", 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <ul class="nav nav-tabs">
        <% if current_user %>
        Signed in as <%= current_user.first_name %> | <li><%= link_to "Logout", '/logout' %></li>
        <% else %>
        <li><%= link_to 'Login', '/login' %></li> 
        <li><%= link_to 'Signup', '/signup' %></li>
        <% end %>
      </ul>
      <%= yield %>
    </div>
  </body>
</html>
