<h1>Login</h1>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_tag sessions_path do %>
    <%= label_tag :email %><br>
    <%= text_field_tag :email %><br>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %><br><br>
    <%= submit_tag "Login", :class => "btn btn-primary", :style => "width:300px" %>
<% end %>
