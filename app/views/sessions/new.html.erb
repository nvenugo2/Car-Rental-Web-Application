<h1>Login</h1>
<% if flash[:alert] %>
<p id ="notice"><%= flash[:alert] %>
	</p>
	<% end %>

<%= form_tag sessions_path do %>
    <%= label_tag :email %><br>
    <%= text_field_tag :email %><br>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %><br><br>
    <%= submit_tag "Login" %>
<% end %>
