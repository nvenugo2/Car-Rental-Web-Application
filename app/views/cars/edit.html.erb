<h2>Please enter the specifications:</h2>
<%= form_for @car do |f| %>
    <p>Manufacturer: <%= f.text_field :manufacturer %></p>
    <p>Model: <%= f.text_field :model %></p>
    <p>Style: <%= f.text_field :style %></p>
    <p>Hourly rate: <%= f.text_field :hourly_rate %></p>
    <p>Location: <%= f.text_field :location %></p>
        <p>License plate <%= f.text_field :license_plate %></p>
        <%= f.hidden_field :status, :value => 'Approved' %>
        <%= f.submit "Apply changes!", :class => "btn btn-primary" %>
<% end %>
    <%= link_to "Back to cars for approval", '/carsforapproval', :class => "btn btn-primary" %>
<%= link_to "Back to approved cars menu", cars_path, :class => "btn btn-primary" %>